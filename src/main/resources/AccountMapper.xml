<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.domain.db.AccountMapper">
	<select id="selectAccount" resultType="com.example.domain.entity.Account">
		select * from account
	</select>
	
    <select id="findByName" parameterType="String" resultType="com.example.domain.entity.Account">
       SELECT
           name,
           password,
           role
       FROM
           account
       WHERE
           name = #{name}
    </select>
</mapper>